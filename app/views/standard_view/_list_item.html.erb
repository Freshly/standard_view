<%# list_item_style_class = presenter.list_item_style? ? " list-group-item-#{presenter.list_item_style}" : "" %>
<% class_name = "list-group-item list-group-item-action" %>

<% unless content_for?(:list_item) %>
  <% content_for(:list_item) do %>
    <%= material.list_title %>
  <% end %>
<% end %>

<% if material.path? %>
  <%= link_to material, class: class_name do %>
    <%= content_for(:list_item) %>
  <% end %>
<% else %>
  <%= content_tag :span, class: class_name do %>
    <%= content_for(:list_item) %>
  <% end %>
<% end %>
